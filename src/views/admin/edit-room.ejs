<div class="edit-room-page">
    <h1>Sửa Phòng</h1>

    <% if (success) { %>
        <div class="success-message">
            <%= success %>
        </div>
        <% } %>

            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/admin/room/edit/<%= room.id %>" method="POST">
                        <div class="form-group">
                            <label for="room_number">Số Phòng</label>
                            <input type="text" id="room_number" name="room_number" value="<%= room.room_number %>"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="room_type_id">Loại Phòng</label>
                            <select id="room_type_id" name="room_type_id" required>
                                <% roomTypes.forEach(roomType=> { %>
                                    <option value="<%= roomType.id %>" <%=roomType.id===room.room_type_id ? 'selected'
                                        : '' %> >
                                        <%= roomType.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="status">Trạng Thái</label>
                            <select id="status" name="status" required>
                                <option value="available" <%=room.status==='available' ? 'selected' : '' %>>Available
                                </option>
                                <option value="booked" <%=room.status==='booked' ? 'selected' : '' %>>Booked</option>
                                <option value="occupied" <%=room.status==='occupied' ? 'selected' : '' %>>Occupied
                                </option>
                                <option value="maintenance" <%=room.status==='maintenance' ? 'selected' : '' %>
                                    >Maintenance</option>
                            </select>
                        </div>

                        <button type="submit" class="submit-btn">Cập Nhật Phòng</button>
                    </form>
</div>