<div class="room-types-page">
    <h1>Quản lý Loại Phòng</h1>

    <div class="actions">
        <a class="add-room-type-btn" href="/admin/room-types/add">Thêm Loại Phòng</a>
    </div>

    <table class="room-types-table">
        <thead>
            <tr>
                <th>Tên Loại Phòng</th>
                <th>Giá (VND)</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <% if (roomTypes && roomTypes.length> 0) { %>
                <% roomTypes.forEach(roomType=> { %>
                    <tr>
                        <td>
                            <%= roomType.name %>
                        </td>
                        <td>
                            <%= roomType.price.toLocaleString('vi-VN') %>
                        </td> <!-- Định dạng giá tiền -->
                        <td>
                            <button class="edit-btn">Sửa</button>
                            <button class="delete-btn">Xóa</button>
                        </td>
                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="3">Chưa có loại phòng nào</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>
</div>